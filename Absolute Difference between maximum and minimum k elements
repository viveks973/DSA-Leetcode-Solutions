class Solution {
    public int absDifference(int[] nums, int k) {
        Arrays.sort(nums);
       int j=nums.length-1;
        int i=0,sum1=0,sum2=0;
        while(i<=k-1){
                sum1=sum1+nums[i];
                sum2=sum2+nums[j];
                i++;
                j--;
        }
        return Math.abs(sum1-sum2); 
    }
}
